{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "CommonJS",
    "target": "es2017",
    "outDir": "dist",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules/"
  ]
}
